<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivLandmarkPhoto"
            android:layout_width="0dp"
            android:layout_height="@dimen/itemLand_height"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvLandmarkName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/itemLand_side_margin"
            android:layout_marginStart="@dimen/itemLand_side_margin"
            android:gravity="center"
            android:shadowColor="@color/itemLandTextShadow"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@color/itemLandTextColor"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivLandmarkPhoto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLandmarkPhoto"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
